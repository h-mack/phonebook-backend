{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.*"]
}
